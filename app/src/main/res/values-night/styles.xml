<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.App.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorBackground">#1F2226</item>

        <item name="dialogs_unread_color">#40909090</item>
        <item name="icon_color_on_colored_back">#fff</item>
        <item name="icon_color_static">@android:color/white</item>
        <item name="navi_menu_selector">@drawable/list_selector_dark</item>

        <item name="textColorPrimary">#ffffffff</item>
        <item name="textColorSecondary">#b3ffffff</item>
        <item name="textColorDisabled">#4Dffffff</item>
        <item name="textColorPrimaryOnColoredBack">#ffffffff</item>
        <item name="textColorSecondaryOnColoredBack">#b3ffffff</item>
        <item name="textColorDisabledOnColoredBack">#4Dffffff</item>

        <item name="list_divider_color">@color/light_dark_divider_color</item>

        <item name="messages_background_color">#151515</item>
        <item name="oval_avatar_background">@xml/sel_button_round_4</item>
